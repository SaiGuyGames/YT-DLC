{
  "manifest_version": 3,
  "name": "YT DLC",
  "version": "1.0",
  "description": "A Chromium extension for downloading clips from YouTube videos.",
  "permissions": [
    "activeTab",
    "storage",
    "declarativeContent",
    "scripting",
    "webNavigation",
    "webRequest",
    "cookies",
    "tabs"
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["contentscript.js"]
    }
  ]
}